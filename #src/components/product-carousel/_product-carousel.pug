mixin product-carousel(title)
    .product-carousel.padding-wrap&attributes(attributes)
        .container
            if title 
                h3.product-carousel__title= title 
            .product-carousel__slider-wrap(data-slider="product-carousel-slider") 
                .product-carousel__slider.swiper
                    .swiper-wrapper
                        .swiper-slide.product-carousel__slider-item
                            - var label = 'хит продаж'; 
                            - var labelClassMod = 'product-label--warning'; 
                            - var labelDetail = false; 
                            - var url = 'img/photo/card-img-1.png'; 
                            - var title = 'Мощный электровелосипед ADO A20'; 
                            - var present = false; 
                            - var promotion = false;
                            - var pricePrimary = false;
                            +card(label, labelClassMod, labelDetail, url, title, present, promotion, pricePrimary)

                        .swiper-slide.product-carousel__slider-item 
                            - var label = 'Подарок'; 
                            - var labelClassMod = 'product-label--success'; 
                            - var labelDetail = true; 
                            - var url = 'img/photo/card-img-1.png'; 
                            - var title = 'Мощный электровелосипед ADO A20'; 
                            - var present = true; 
                            - var promotion = false;
                            - var pricePrimary = false;
                            +card(label, labelClassMod, labelDetail, url, title, present, promotion, pricePrimary)

                        .swiper-slide.product-carousel__slider-item 
                            - var label = 'АКЦИЯ'; 
                            - var labelClassMod = 'product-label--danger'; 
                            - var labelDetail = true; 
                            - var url = 'img/photo/card-img-1.png'; 
                            - var title = 'Мощный электровелосипед ADO A20'; 
                            - var present = false; 
                            - var promotion = true;
                            - var pricePrimary = 'text-primary';
                            +card(label, labelClassMod, labelDetail, url, title, present, promotion, pricePrimary)

                        .swiper-slide.product-carousel__slider-item 
                            - var label = 'НОВИНКА'; 
                            - var labelClassMod = 'product-label--info'; 
                            - var labelDetail = false; 
                            - var url = 'img/photo/card-img-1.png'; 
                            - var title = 'Мощный электровелосипед ADO A20'; 
                            - var present = false; 
                            - var promotion = false;
                            - var pricePrimary = false;
                            +card(label, labelClassMod, labelDetail, url, title, present, promotion, pricePrimary)

                        .swiper-slide.product-carousel__slider-item
                            - var label = false; 
                            - var labelClassMod = false; 
                            - var labelDetail = false; 
                            - var url = 'img/photo/card-img-1.png'; 
                            - var title = 'Мощный электровелосипед ADO A20'; 
                            - var present = false; 
                            - var promotion = false;
                            - var pricePrimary = false;
                            +card(label, labelClassMod, labelDetail, url, title, present, promotion, pricePrimary)

                        .swiper-slide.product-carousel__slider-item 
                            - var label = 'Подарок'; 
                            - var labelClassMod = 'product-label--success'; 
                            - var labelDetail = true; 
                            - var url = 'img/photo/card-img-1.png'; 
                            - var title = 'Мощный электровелосипед ADO A20'; 
                            - var present = true; 
                            - var promotion = false;
                            - var pricePrimary = false;
                            +card(label, labelClassMod, labelDetail, url, title, present, promotion, pricePrimary)

                .product-carousel__slider-controls
                    include ../common/slider-controls/_slider-controls